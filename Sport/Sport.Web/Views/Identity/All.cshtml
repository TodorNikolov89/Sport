@model IEnumerable<ListUserViewModel>

@{
    ViewData["Title"] = "All";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <h2 class="text-success">@TempData["SuccessMessage"]</h2>
}

<div>
    <a href="/identity/create" class="btn btn-primary">Add User</a>
</div>
<br />

<table class="table table-bordered table-hover">
    <tr>
        <th>
            Username
        </th>
        <th>
            E-mail
        </th>
        <th>

        </th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <th>
                @user.Username
            </th>
            <th>
                @user.Email
            </th>
            <th>
                <a href="/identity/changepassword/@user.Id" class="btn btn-warning">Change Password</a>
                <a href="/identity/roles/@user.Id" class="btn btn-default">Role</a>
            </th>
        </tr>
    }
</table>