@model IEnumerable<FinishedMatchesViewModel>
@{
    ViewData["Title"] = "Finished matches";
}

<h1>@ViewData["Title"]</h1>


<script>
    var arr = ["0", "15", "30", "40", "Ad"];
</script>

<style>
    table {
        border-bottom: 1px solid black;
        width: 1000px;
        margin: 5px;
    }

    tr, th {
        border: 1px black;
        align-content: center;
    }

    .games {
        color: gray;
    }
</style>

@foreach (var match in Model)
{
    <table>
        <tbody>
            <tr>
                <th width="400px">
                    @match.FirstPlayer.FirstName @match.FirstPlayer.LastName
                </th>
                <th width="150px">
                    @match.FirstPlayerSets
                </th>
                @foreach (var set in match.Sets)
                {
                    <th class="games" width="150px">
                        @set.FirstPlayerGames
                    </th>
                }
            </tr>
            <tr>
                <th width="400px">
                    @match.SecondPlayer.FirstName @match.SecondPlayer.LastName
                </th>
                <th width="150px">
                    @match.SecondPlayerSets
                </th>
                @foreach (var set in match.Sets)
                {
                    <th class="games" width="150px">
                        @set.SecondPlayerGames
                    </th>
                }
            </tr>

        </tbody>
    </table>
}

<button onclick="myFunction()" value="1">Open</button>
<script>
    function myFunction(matchId) {
        window.open("/Matches/GetMatchDetails/144","","width=400,height=400");
    }
</script>