@model IEnumerable<AllPlayersViewModel>
@using Microsoft.AspNet.Identity
@{
    ViewData["Title"] = "All";
}

<h1>All players</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Win/Loses
            </th>
            <th>
                Points
            </th>
            <th>
                Town
            </th>
            <th>
                Current rank
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            @if (player.Id.Equals(User.Identity.GetUserId()))
            {
                <tr bgcolor="#b2b2b2">
                    <th>
                        @player.FirstName @player.LastName
                    </th>
                    <th>
                        @player.Win/@player.Loses
                    </th>
                    <th>
                        @player.Points
                    </th>
                    <th>
                        @player.Town
                    </th>
                    <th>
                        @player.Rank
                    </th>
                </tr>
            }
            else
            {
                <tr >
                    <th>
                        @player.FirstName @player.LastName
                    </th>
                    <th>
                        @player.Win/@player.Loses
                    </th>
                    <th>
                        @player.Points
                    </th>
                    <th>
                        @player.Town
                    </th>
                    <th>
                        @player.Rank
                    </th>
                </tr>
            }
        }
    </tbody>
</table>


